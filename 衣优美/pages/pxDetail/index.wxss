.evaluate-input-wrapper {
    display: flex;
    position: fixed;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    z-index: 99;
    justify-content: space-between;
    padding: 20rpx;
    background-color: #fff;
}

.evaluate-input {
    flex: 1;
    border: 1px solid red;
    padding-left: 20rpx;
}