}
.alert_size_box view button{
   margin-left:40rpx;
   text-align: center;
   padding:0px;
}
.alert_size button{
  width: 100rpx;
  display: inline-block;
  background:#fff;
}
.alert_count_title{
  margin-left:60rpx;
  /* border: 1px solid red; */
  line-height: 80rpx;
}

.alert_count_calc{
  /* border:1px solid red; */
  flex: 1;
  text-align: right;
}
.alert_count_calc button,
.alert_count_calc input{
  display: inline-block;
}
.alert_count_calc input{
  width: 60rpx;
  border:1px solid #eee;
  height: 63rpx;
  text-align: center;
}







