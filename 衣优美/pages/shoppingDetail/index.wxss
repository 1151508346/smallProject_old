.detail-bar{
	height: 90rpx;
	position:fixed;
	bottom:0;
	z-index: 999;
	width: 100%;
	box-sizing: border-box;
	display: flex;
}
.detail-bar-my,
.detail-bar-car,
.detail-bar-collect{
	width: 100rpx;
	height: 100rpx;
	
	
}
.detail-bar-addCar,
.detail-bar-quickPay{
	flex: 1;
	/* border:1px solid red; */
	line-height: 100rpx;
	color:#fff;
	font-size:28rpx;
}
.active-bar{
	color:#000;
}

.detail-bar{
	text-align:center;
	background: #fff;
}
.detail-bar-addCar{
	background-color:#f90;
}
.detail-bar-quickPay{
	background-color:#f00;
}
.detail-bar-list image{
	width: 50%;
	height: 50%;
	
	
}
.detail-bar-list-title{
	font-size:20rpx;
	margin-top:-10rpx;
}

.swiper-item{
	height: 100%;
}
.swiper-item image{
	height: 100%;
}
swiper{
	height: 700rpx;
}
.detail-title-share{
	/* border:1px solid red; */
	display: flex;
	margin-top:10rpx;
	margin-bottom:10rpx;
	
}
.detail-title{
	flex:1;
	/* border:1px solid red; */
	overflow: hidden;
	/* text-overflow: ellipsis; */
	/* white-space: nowrap; */
	font-size:32rpx;
	padding:10rpx;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	text-indent: 2em;
	font-size:34rpx;
	
}
.detail-share{
	width:100rpx;
	/* border:1px solid red; */
	border-left:2px solid #eee;
	padding-top:40rpx;
	padding-bottom:10rpx;
	text-align: center;
}

.detail-price,
.detail-size-count,
.detail-photo-show{
	border:1px solid #eee;
	padding:20rpx;
	
}
.detail-photo-show,
.detail-photo-show text{
	text-align:center;
	font-size:26rpx;
	color:#f00;
	font-weight: 600;
}
.detail-price text{
	color:#f00;
	/* padding-left:10rpx; */
	
	
}
.detail-price text:nth-of-type(1){
	font-size:26rpx;
	margin-left:20rpx;
}
.detail-price text:nth-of-type(2){
	font-size:40rpx;
}


.detail-size-count text:nth-of-type(1){
	font-size:26rpx;
	margin-left:20rpx;
}
.detail-size-count text:nth-of-type(2){
	float: right;
	
	margin-right:20rpx;
}