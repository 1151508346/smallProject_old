<view class="container">
	<view class="modelbg"
	 style="width: {{screenWidth}}px;height: {{screenHeight}}px;"
	wx-if = "{{modelBgToggle}}"
	bindtap = "handleCloseModelBg"
	 >
	 </view>
	

	 <view class="{{shopping_bar}}" >
		
		 <block wx:for="{{shopping_barList}}" wx:for-index="indexs" wx:for-item="items" >
			 <view  class="{{indexs == shoppingType?'activeShoppingStatus':'defaultShoppingStatus'}}">
				<text bindtap="handleShoppingListToggle" data-listName="{{indexs}}"> {{indexs}}</text>
				<view class="shopping_items" wx-if="shopping_index_toggle">
					<block  wx:for="{{items}}" wx:key="{{index}}">
					 <view  class="{{indexs == shoppingType?'activeShoppingStatus':'defaultShoppingStatus'}}">
							{{item}}
						</view>
					</block>
				</view>
			 </view>
		 </block>
		
	 </view>
    <view class="fenlei_search_box">
      <view class="fs_list fenlei" bindtap = "handleToggleShoppingList">
		  <image class="fenlei_img" src="/static/分类.png" />
	  </view>
      <view class="fs_list search">
		  <button>搜索</button>
	  </view>
   </view>
