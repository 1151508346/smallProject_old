<view class="container">

 <view class="page-section page-section-spacing swiper">
      <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"
        >
        <block wx:for="{{background}}" wx:key="{{index}}" >
          <swiper-item>
            <view class="swiper-item">
              <image src="{{item}}"/>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>

    <view class = "gird">
      <block wx:for="{{routers1}}" wx:key="{{index}}" >
          <navigator url="{{item.url}}">  
            <view class="weui-grid__icon">  
              <image src=" {{item.icon}}" mode="scaleToFill" />  
            </view>  
            <text class="weui-grid__label">{{item.name}}</text>  
          </navigator> 
        </block>
    </view>
     <view class = "gird">
      <block wx:for="{{routers2}}" wx:key="{{index}}" >
          <navigator url="{{item.url}}">  
            <view class="weui-grid__icon">  
              <image src=" {{item.icon}}" mode="scaleToFill" />  
            </view>  
            <text class="weui-grid__label">{{item.name}}</text>  
          </navigator> 
        </block>
    </view>
    <view class="tuijian_box">
      <view class="btuijian">
        <text class="btuijian_list btuijian_title">商家推荐</text>
        <text class="btuijian_list btuijian_more">更多>></text>
      </view>
      <view class="tujian_image_list">
          <view>
            <image class="tujian_image_list_img" src="{{initDefaultImg}}"></image>
          </view>
          <view>2</view>
          <view>3</view>
      </view>

    </view>



</view>